{
  "name": "common-api",
  "version": "1.0.0",
  "description": "Server side API source code",
  "main": "build/server.js",
  "scripts": {
    "clean": "rm -rf build && mkdir build",
    "build-server": "babel -d ./build ./app -s",
    "build": "npm run clean && npm run build-server",
    "start": "babel-node ./app/server.js",
    "local": "nodemon ./app/server.js --exec babel-node",
    "test": "mocha test/*.spec.js --recursive --watch --require babel-core/register",
    "lint": "eslint ./app",
    "fix": "eslint ./app --fix"
  },
  "repository": {},
  "author": "Worawit Boonsorn",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "body-parser": "^1.18.3",
    "config": "^2.0.1",
    "cors": "^2.8.4",
    "express": "^4.16.4",
    "firebase-tools": "^5.1.1",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "mongoose": "^5.3.4",
    "serve-index": "^1.9.1",
    "winston": "^3.1.0",
    "winston-daily-rotate-file": "^3.3.3"
  },
  "devDependencies": {
    "eslint": "^5.7.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "expect.js": "^0.3.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4",
    "superagent": "^3.8.3"
  }
