{
  "name": "common-api",
  "version": "1.0.0",
  "description": "Server side API source code",
  "main": "build/server.js",
  "scripts": {
    "clean": "rm -rf build && mkdir build",
    "build-server": "babel -d ./build ./app -s",
    "build": "npm run clean && npm run build-server",
    "start": "npm run build && node ./build/server.js",
    "local": "nodemon ./app/server.js --exec babel-node",
    "dev": "npm run build && NODE_ENV=development pm2 start ./build/server.js",
    "staging": "npm run build && NODE_ENV=staging pm2 --log /app/library-log/pm2.log start ./build/server.js",
    "production": "npm run build && NODE_ENV=production pm2 --log /app/library-log/pm2.log start ./build/server.js",
    "test": "mocha test/*.spec.js --recursive --watch --require babel-core/register"
  },
  "repository": {},
  "author": "Worawit Boonsorn",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.9.0",
    "babel-core": "^6.7.7",
    "babel-polyfill": "^6.9.0",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "lodash": "^4.17.4",
    "moment": "^2.14.1",
    "mongoose": "^5.0.14",
    "serve-index": "^1.9.1",
    "winston": "^2.4.1",
    "winston-daily-rotate-file": "^3.0.2"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "expect.js": "^0.3.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.3",
    "superagent": "^3.8.3"
  }
}
